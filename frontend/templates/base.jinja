<!DOCTYPE html>
<html lang="nl-NL">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{% block title %}{% endblock %} - Stichting Accessibility Hub</title>

    <!-- CSS -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link
        rel="stylesheet"
        href="{{ url_for('.static', filename='css/style.css') }}"
    />

    <!-- Favicon -->
    <link rel="shortcut icon" href="{{ url_for('.static', filename='img/favicon.ico') }}">

    {% block head %}{% endblock %}
</head>

<body class="d-flex flex-column min-vh-100" data-bs-theme="{{ theme }}">

    <!-- Skip link for screen reader users -->
    <a href="#main-content" class="visually-hidden-focusable">Ga naar hoofdinhoud</a>

    <!-- Header -->
    <header class="header" role="banner">
        <nav class="navbar navbar-expand navbar-dark nav-background" style="justify-content: space-between;"aria-label="Hoofd navigatie">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <a class="navbar-brand" href="{{ url_for('frontend.home') }}" title="Home van stichting Accessibility">
                    <img
                        width="256"
                        height="64"
                        src="{{ url_for('.static', filename='img/logo.svg') }}"
                        alt="Homepage, logo Accessibility, onderdeel van Bartimeus"
                    />
                </a>

                <ul class="navbar-nav gap-3 align-items-center">
                    {% block logout %}
                    {% if session.get('user') %}
                    <li class="nav-item dropdown">
                        <button
                            id="accountDropdown"
                            class="btn btn-primary dropdown-toggle"
                            type="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            aria-haspopup="true"
                            aria-controls="account-menu"
                        >
                            {{ session['user']['first_name'] }}
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end text-center" aria-labelledby="accountDropdown" id="account-menu">
                            <li>
                                <a class="dropdown-item" href="#">Bekijk profiel</a>
                            </li>
                            <li>
                                <a href="{{ url_for('frontend.logout') }}" class="btn btn-primary d-block mx-auto w-75">
                                    Uitloggen
                                </a>
                            </li>
                        </ul>
                    </li>
                    {% endif %}
                    {% endblock %}

                    <li class="nav-item">
                        <button
                            id="themeToggle"
                            class="btn btn-primary"
                            title="Schakel donkere modus in/uit"
                            aria-pressed="{{ 'true' if theme == 'dark' else 'false' }}"
                        >
                            <span aria-hidden="true">ðŸŒ™</span>
                            <span class="visually-hidden">Schakel donkere modus in of uit</span>
                        </button>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main -->
    <main id="main-content" role="main" tabindex="-1">
        {% block content %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer role="contentinfo" class="mt-auto">
        <div class="text-center p-3 bg-secondary-subtle">
            <a href="/" style="text-decoration: none; color: #052c65; font-weight: bold">Â© 2025 Stichting Accessibility</a>
        </div>
    </footer>

    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"
    ></script>
    <script
        src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
        crossorigin="anonymous"
    ></script>
    <script src="{{ url_for('.static', filename='js/main.js') }}"></script>

    {% block scripts %}{% endblock %}

</body>
</html>