{% extends "base.jinja" %}
{% block title %}Onderzoeken{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="mb-4">Alle Onderzoeken</h1>

    <div class="mb-4">
        <div class="mb-2">
            <span class="badge bg-success rounded-circle" style="width: 15px; height: 15px; display: inline-block;"></span>
            = Goedgekeurd
        </div>
        <div class="mb-2">
            <span class="badge bg-danger rounded-circle" style="width: 15px; height: 15px; display: inline-block;"></span>
            = Afgekeurd
        </div>
        <div class="mb-2">
            <span class="badge bg-secondary rounded-circle" style="width: 15px; height: 15px; display: inline-block;"></span>
            = Afgesloten
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th class="text-center">Status</th>
                <th>Titel</th>
                <th>Beschrijving</th>
                <th>Startdatum</th>
                <th>Einddatum</th>
                <th>Locatie</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            {% if alle_onderzoeken %}
                {% for onderzoek in alle_onderzoeken %}
                    <tr>
                        <td class="text-center">
                            {% if onderzoek.status_id == 2 %}
                                <span class="badge bg-success rounded-circle" style="width: 15px; height: 15px; display: inline-block;" title="Goedgekeurd"></span>
                            {% elif onderzoek.status_id == 3 %}
                                <span class="badge bg-danger rounded-circle" style="width: 15px; height: 15px; display: inline-block;" title="Afgekeurd"></span>
                            {% elif onderzoek.status_id == 4 %}
                                <span class="badge bg-secondary rounded-circle" style="width: 15px; height: 15px; display: inline-block;" title="Afgesloten"></span>
                            {% endif %}
                        </td>
                        <td>{{ onderzoek.title }}</td>
                        <td>{{ onderzoek.description or 'Geen beschrijving' }}</td>
                        <td>{{ onderzoek.start_date.strftime('%d-%m-%Y') if onderzoek.start_date else 'Onbekend' }}</td>
                        <td>{{ onderzoek.end_date.strftime('%d-%m-%Y') if onderzoek.end_date else 'Onbekend' }}</td>
                        <td>{{ onderzoek.location or 'Onbekend' }}</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-info">Details</a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Geen onderzoeken gevonden.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}